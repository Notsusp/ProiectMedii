@page
@model ProiectMedii.Pages.Doctors.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].LicenseNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].Specialization)
            </th>
            <th>
                Actions
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model.Doctor)
        {
            <tr>
                <td>@doctor.Name</td>
                <td>@doctor.LicenseNumber</td>
                <td>@doctor.Email</td>
                <td>@doctor.PhoneNumber</td>
                <th>@doctor.Specialization</th>
                <td>
                    <a asp-page="/Doctors/Details" asp-route-id="@doctor.Id">Details</a> |
                    <a asp-page="/Doctors/Edit" asp-route-id="@doctor.Id">Edit</a> |
                    <a asp-page="/Doctors/Delete" asp-route-id="@doctor.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

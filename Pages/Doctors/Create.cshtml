@page
@model ProiectMedii.Pages.Doctors.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Doctor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Doctor.Name" class="control-label"></label>
                <input asp-for="Doctor.Name" class="form-control" />
                <span asp-validation-for="Doctor.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.Specialization"></label>
                <select asp-for="Doctor.Specialization" asp-items="Html.GetEnumSelectList<Specialization>()">
                    <option value="">Select Specialization</option>
                </select>
                <span asp-validation-for="Doctor.Specialization"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.LicenseNumber"></label>
                <input asp-for="Doctor.LicenseNumber" class="form-control" />
                <span asp-validation-for="Doctor.LicenseNumber"></span>
            </div>

            <div class="form-group">
                <label asp-for="Doctor.Email"></label>
                <input asp-for="Doctor.Email" class="form-control" />
                <span asp-validation-for="Doctor.Email"></span>
            </div>


            <div class="form-group">
                <label asp-for="Doctor.PhoneNumber"></label>
                <input asp-for="Doctor.PhoneNumber" class="form-control" />
                <span asp-validation-for="Doctor.PhoneNumber"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.HashedPassword"></label>
                <input asp-for="Doctor.HashedPassword" type="password" class="form-control" />
                <span asp-validation-for="Doctor.HashedPassword"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirmation"></label>
                <input asp-for="PasswordConfirmation" type="password" class="form-control" />
                <span asp-validation-for="PasswordConfirmation"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

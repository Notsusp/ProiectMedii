@page
@model ProiectMedii.Pages.Patients.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Patient</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Patient ID</dt>
        <dd class="col-sm-10">@Model.Patient.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@($"{Model.Patient.FirstName} {Model.Patient.LastName}")</dd>

        <dt class="col-sm-2">Date of Birth</dt>
        <dd class="col-sm-10">@Model.Patient.DateOfBirth.ToShortDateString()</dd>

        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.Patient.Gender</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Patient.Email</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.Patient.PhoneNumber</dd>

        <dt class="col-sm-2">Insurance Provider</dt>
        <dd class="col-sm-10">@Model.Patient.InsuranceProvider</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Patient.Id" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
